[Unit]
Description=Rotate Centmin Mod nginx TLS session ticket keys
After=nginx.service nginx-create-session-ticket-keys.service

[Service]
Type=oneshot
User=root
Group=root
ExecStart=/usr/local/bin/manage-session-keys rotate
ExecStartPost=systemctl reload nginx.service

PrivateDevices=true
PrivateIPC=true
PrivateNetwork=true
PrivateTmp=true
PrivateUsers=true

# filesystem restrictions
ProtectSystem=strict
ReadWritePaths=/usr/local/nginx/conf/session_ticket_keys
UMask=0077